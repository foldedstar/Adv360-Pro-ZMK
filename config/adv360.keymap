#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/backlight.h>

#define  MC_HASH    LA(N3)
#define  SC_FLL  LC(LA(RET))
#define  SC_LFT  LC(LA(LEFT))
#define  SC_RGT  LC(LA(RIGHT))

#define KEYS_LEFT 0 1 2 3 4 5 6 \
                  14 15 16 17 18 19 20 \
                  28 29 30 31 32 33 34 \
                  46 47 48 49 50 51 \
                  66 67 68 69 70

#define KEYS_RIGHT 7 8 9 10 11 12 13 \
                   21 22 23 24 25 26 27 \
                   39 40 41 42 43 44 45 \
                   60 61 62 63 64 65 \
                   77 78 79 80 81

#define THUMBS_LEFT 35 36 54 71 72 73

#define THUMBS_RIGHT 37 38 57 74 75 76

#define THUMBS THUMBS_LEFT THUMBS_RIGHT


&caps_word {
    continue-list = <UNDERSCORE MINUS>;
};

/ {
    behaviors {
      #include "macros.dtsi"

      hm: homerow_mods {
          compatible = "zmk,behavior-hold-tap";
          label = "HOMEROW_MODS";
          #binding-cells = <2>;
          flavor = "tap-preferred"; // hold is only triggered if next keypress happens after timeframe
          tapping-term-ms = <100>;  // timeframe to trigger a hold
          quick_tap_ms = <0>;     // second kp within timeframe always triggers tap (useful if need to hold)
          bindings = <&kp>, <&kp>;
      };

      tlm: thumb_layer_mods {
           compatible = "zmk,behavior-hold-tap";
           label = "THUMB_LAYER_MODS";
           #binding-cells = <2>;
           flavor = "balanced";
           tapping-term-ms = <200>;
           quick_tap_ms = <175>;
           bindings = <&mo>, <&kp>;
      };
                                        
    hm_l: homerow_mods_left {
        compatible = "zmk,behavior-hold-tap";
        label = "HOMEROW_MODS_LEFT";
        #binding-cells = <2>;
        tapping-term-ms = <200>;
        quick_tap_ms = <175>;
        flavor = "balanced";
        bindings = <&kp>, <&kp>;
        hold-trigger-key-positions = <KEYS_RIGHT THUMBS>;
    };

    hm_r: homerow_mods_right {
        compatible = "zmk,behavior-hold-tap";
        label = "HOMEROW_MODS_RIGHT";
        #binding-cells = <2>;
        tapping-term-ms = <200>;
        quick_tap_ms = <175>;
        flavor = "balanced";
        bindings = <&kp>, <&kp>;
        hold-trigger-key-positions = <KEYS_LEFT THUMBS>;
    };

      lh_pht: left_hand_positional_hold_tap {
           compatible = "zmk,behavior-hold-tap";
           label = "LEFT_POSITIONAL_HOLD_TAP";
           #binding-cells = <2>;
           flavor = "tap-unless-interrupted";  // triggers a hold only when another key is pressed before tapping-term-ms has expired. Triggers tap in all other situations
           tapping-term-ms = <100>;            // <---[[produces tap if held longer than tapping-term-ms]]
           quick-tap-ms = <200>;
           bindings = <&kp>, <&kp>;
           hold-trigger-key-positions = <KEYS_RIGHT>;
       };
      rh_pht: right_hand_positional_hold_tap {
           compatible = "zmk,behavior-hold-tap";
           label = "RIGHT_POSITIONAL_HOLD_TAP";
           #binding-cells = <2>;
           flavor = "tap-unless-interrupted";  // triggers a hold only when another key is pressed before tapping-term-ms has expired. Triggers tap in all other situations
           tapping-term-ms = <100>;            // <---[[produces tap if held longer than tapping-term-ms]]
           quick-tap-ms = <200>;
           bindings = <&kp>, <&kp>;
           hold-trigger-key-positions = <KEYS_LEFT>;
       };

    };

  
