#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/backlight.h>

#define  HASH     LA(&kp N3)
#define  SCN_FLL  LC(LA(&kp RET))
#define  SCN_LFT  LC(LA(&kp LEFT))
#define  SCN_RGT  LC(LA(&kp RIGHT))


/ {
    behaviors {
      #include "macros.dtsi"

      hm: homerow_mods {
          compatible = "zmk,behavior-hold-tap";
          label = "HOMEROW_MODS";
          #binding-cells = <2>;
          flavor = "tap-preferred"; // hold is only triggered if next keypress happens after timeframe
          tapping-term-ms = <200>;  // timeframe to trigger a hold
          quick_tap_ms = <175>;     // second kp within timeframe always triggers tap (useful if need to hold)
          bindings = <&kp>, <&kp>;
      };

      tlm: thumb_layer_mods {
           compatible = "zmk,behavior-hold-tap";
           label = "T_LAYER_MODS";
           #binding-cells = <2>;
           flavor = "hold-preferred";
           tapping-term-ms = <200>;  // timeframe to trigger hold
           quick_tap_ms = <175>;     // second kp within timeframe always triggers tap (useful if need to hold)
           bindings = <&mo>, <&kp>;
      };

    };

  
  keymap {
    compatible = "zmk,keymap";

    default_layer {
      bindings = <
        &none      &kp N1     &kp N2     &kp N3      &kp N4      &kp N5     &tog 1                                                      &mo 4    &kp N6    &kp N7      &kp N8      &kp N9     &kp N0        &none
