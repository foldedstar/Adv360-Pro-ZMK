    numbers_nav {
      bindings = <
        &trans     &kp F11    &kp F12    &none       &none       &none      &trans                                                      &trans   &none     &none       &none       &none      &none         &trans
        &trans     &none      &kp N7     &kp N8      &kp N9      &none      &trans                                                      &trans   &none     &none       &none       &none      &none         &trans
        &trans     &none      &kp N4     &kp N5      &kp N6      &none      &trans          &trans     &trans   &trans  &trans          &trans   &kp LEFT  &kp DOWN    &kp UP      &kp RIGHT  &none         &trans
        &trans     &kp N0     &kp N1     &kp N2      &kp N3      &none                                 &trans   &trans                           &kp HOME  &kp PG_DN   &kp PG_UP   &kp END    &none         &trans
        &trans     &trans     &none      &none       &none                      &trans      &trans     &trans   &trans  &trans    &trans                   &kp SC_LFT  &kp SC_FLL  &kp SC_RGT &trans        &trans
      >;
    };
    mod {
      bindings = <
        &none &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4 &none                                                    &trans   &none     &none       &none       &none      &none         &none
        &none      &none      &none      &none       &none       &none      &bootloader                                            &bootloader   &none     &none       &none       &none      &none         &none
        &none      &none      &none      &none       &none       &none      &none      &none &none &bt BT_CLR &none     &rgb_ug RGB_MEFS_CMD 5   &none     &none       &none       &none      &none         &none
