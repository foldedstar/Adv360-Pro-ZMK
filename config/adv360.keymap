#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/backlight.h>

#define MC_HASH LA(N3)
#define SC_FLL LC(LA(RET))
#define SC_LFT LC(LA(LEFT))
#define SC_RGT LC(LA(RIGHT))

#define KEYS_LEFT 0 1 2 3 4 5 6 \
                  14 15 16 17 18 19 20 \
                  28 29 30 31 32 33 34 \
                  46 47 48 49 50 51 \
                  66 67 68 69 70

#define KEYS_RIGHT 7 8 9 10 11 12 13 \
                   21 22 23 24 25 26 27 \
                   39 40 41 42 43 44 45 \
                   60 61 62 63 64 65 \
                   77 78 79 80 81

#define THUMBS_LEFT 35 36 54 71 72 73
#define THUMBS_RIGHT 37 38 57 74 75 76
#define THUMBS THUMBS_LEFT THUMBS_RIGHT

&caps_word {
    continue-list = <UNDERSCORE MINUS BACKSPACE DELETE>;
};

/ {
    behaviors {
      #include "macros.dtsi"

    tlm: thumb_layer_mods {
        compatible = "zmk,behavior-hold-tap";
        label = "THUMB_LAYER_MODS";
        #binding-cells = <2>;
        flavor = "balanced";
        tapping-term-ms = <200>;
        quick_tap_ms = <175>;
        bindings = <&mo>, <&kp>;
    };
                                        
    hml: homerow_mods_left {
        compatible = "zmk,behavior-hold-tap";
        label = "HOMEROW_MODS_LEFT";
        #binding-cells = <2>;
        flavor = "balanced";
        tapping-term-ms = <200>;
        quick_tap_ms = <175>;
        bindings = <&kp>, <&kp>;
        hold-trigger-key-positions = <KEYS_RIGHT THUMBS>;
    };

    hmr: homerow_mods_right {
        compatible = "zmk,behavior-hold-tap";
        label = "HOMEROW_MODS_RIGHT";
        #binding-cells = <2>;
        flavor = "balanced";
        tapping-term-ms = <200>;
        quick_tap_ms = <175>;
        bindings = <&kp>, <&kp>;
        hold-trigger-key-positions = <KEYS_LEFT THUMBS>;
    };

    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <1 3>;
            then-layer = <4>;
        };
    };

    macros {
        mc_sw: mc_sw {
            label = "MAC_SWITCH";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&bt BT_SEL 0>
                , <&tog 3>
                ; // enable mac overlay layer
        };
        pc_sw: pc_sw {
            label = "PC_SWITCH";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&bt BT_SEL 1>
                , <&tog 3>
                ; // disable mac overlay layer
        };
    };
  };

    keymap {
        compatible = "zmk,keymap";

layer_0 {
